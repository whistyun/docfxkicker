{
  "@plugin": "docfxkicker_translationhelp",

  "@init": {
    "trigger": "index.md",
    "dest": "EN"
  },

  "metadata": [
    {
      "src": [
        {
          "src": "../%projectName%",
          "files": "%projectName%.csproj"
        }
      ],
      "dest": "EN/api",
      "disableGitFeatures": false,
      "disableDefaultFilter": false
    }
  ],

  "@loop": {
    "name": "lang",
    "items": [ "EN" ]
  },

  "@docfxkicker_translationhelp": {
    "files": [
      "EN/api/**.yml",
      "EN/*.yml"
    ],
    "dests": [
      "$lang/api",
      "$lang"
    ],

    "srcLang": "EN",
    "destLang": "$lang",

    "machineTranslation": "DeepL",
    "translationResult": "langmap_${lang}.csv"
  },

  "@cd": "$lang",

  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "articles/**.md",
          "articles/**/toc.yml",
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "dest": "../_site/$lang",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default"
    ],
    "postProcessors": [],
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false
  }
}